datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int            @id @default(autoincrement())
  name         String
  email        String         @unique
  password     String
  cep          String?
  state        String?
  city         String?
  role         String         @default("user")
  loginHistory LoginHistory[] // relação 1:N
}

model LoginHistory {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  timestamp DateTime @default(now())
  ip        String?
  userAgent String?
}
